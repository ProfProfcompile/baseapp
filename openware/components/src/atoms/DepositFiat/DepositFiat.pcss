.cr-deposit-fiat {
  padding: var(--gap);

  &__title {
    font-size: 1.2em;
    margin-bottom: calc(var(--gap) * 3);
  }

  &__description {
    margin-bottom: calc(var(--gap) * 3);
  }

  &-detail {
    display: flex;

    &__label,
    &__value {
      flex: 1;
      margin-top: calc(var(--gap) * 2);
    }

    &__label {
      color: var(--base-2);
    }

    &__value {
      /* placeholder */
    }
  }
}
