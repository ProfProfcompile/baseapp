.cr-input {
  display: inline-block;
  background-color: inherit;

  input {
    border: none;
    outline: none;
    text-align: right;
    background-color: transparent;
    color: var(--base-1);
  }

  &__number {
    input {
      &:focus {
        margin: 0;
      }
    }
  }
}
